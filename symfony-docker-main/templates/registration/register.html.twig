{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    <div class="custom-form">
        {{ form_start(registrationForm, {'attr': {'class': 'custom-form-class'}}) }}
        <div class="form-group">
            {{ form_row(registrationForm.email, {'attr': {'class': 'custom-input'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Password',
                'attr': {'class': 'custom-input'}
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.name, {
            'label': 'Name',
            'attr': {'class': 'custom-input'}
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'custom-label'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

